
@page
@model ArreglosApp.Pages.CifradoModel
<!DOCTYPE html>
<html>
<head>
    <title>Programa 2 - Cifrado César</title>
</head>
<body>
    <h2>Cifrado César</h2>

    <form method="post">
        <div>
            <label for="message">Mensaje:</label>
            <input type="text" id="message" asp-for="message" name="message" />
        </div>
        <div>
            <label for="shift">Desplazamiento (n):</label>
            <input type="number" id="shift" asp-for="shift" name="shift" />
        </div>
        <div>
            <button type="submit" name="action" value="encode">Codificar</button>
            <button type="submit" name="action" value="decode">Decodificar</button>
        </div>
    </form>

    @if (Model.result != null)
    {
        <h3>Resultado:</h3>
        <p id="result">@Model.result</p>
    }
</body>
</html>